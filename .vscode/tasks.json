{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$swiftc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "swift run LiteMark",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$swiftc"
            ],
            "dependsOn": "build"
        }
    ]
}